{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "types": [ "node" ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "typeRoots": ["typings"]
  },
  "include": ["src", "typings", "test"],
  "exclude": ["node_modules", "dist"]
}
